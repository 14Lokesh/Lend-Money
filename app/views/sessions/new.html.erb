<h1 class="text-center">Log in</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: sessions_path do |form| %>
        <div class="form-group my-3">
          <%= form.label :Email , class: 'required' %>
          <%= form.email_field :email, class: "form-control", placeholder: "example@gmail.com", required: true %>
        </div>
        <div class="form-group my-3">
          <%= form.label :password, class: 'required' %>
          <%= form.password_field :password, class: "form-control", placeholder: "password",required: true %>
        </div>
        <%= form.submit "Login", class: "mt-3 button-design form-control" %>
      <% end %>
    </div>
  </div>
</div>