<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Loan Request</h1>
      <%= form_for @loan do |form|%>
        <div class="form-group">
          <%= form.label :Loan_Amount, class: 'required' %>
          <%= form.text_field :amount, class: "form-control", placeholder: "Enter the amount" , required: true%>
          <p class='error'><%= show_errors(@loan, :amount)%></p>
        </div>
        <p>Note: Default interest rate will be 5%, Admin can modify it</p>
        <%= form.submit "Request", class: " mt-3 button-design form-control" %>
      <% end %>
    </div>
  </div>
</div>