<h1 class="text-center">Open Loans</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @loans.any? %>
        <table class="table table-striped table-bordered text-center">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Amount</th>
              <th scope="col">Interest Rate</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td><%= loan.amount.to_i %></td>
                <td><%= loan.interest_rate %>
                </td>
                <td><%= link_to "Pay All Amount", loan_path(loan.id), method: :put, class: "button-design text-decoration-none " %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
