<h1 class="text-center">Pending Loan</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @loans.any? %>
        <table class="table table-striped table-bordered text-center">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Amount</th>
              <th scope="col">Interest Rate</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td><%= loan.amount.to_i %></td>
                <td><%= loan.interest_rate %></td>
                <td>
                  <div class="d-flex justify-content-center">
                    <%= button_to "Confirm", confirm_loan_user_path(loan.id), remote: true, class: "btn btn-primary me-2" %>
                    <%= button_to "Reject", reject_loan_user_path(loan.id), class: "btn btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
