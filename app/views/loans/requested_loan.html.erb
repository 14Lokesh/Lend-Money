<h1 class="text-center">Requested Loans</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @loans.any? %>
        <table class="table table-striped table-bordered text-center">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Amount</th>
              <th scope="col">Interest Rate</th>
              <th scope="col">Delete Request</th>
            </tr>
          </thead>
          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td><%= loan.amount %></td>
                <td><%= loan.interest_rate %></td>
                <td><%= button_to "Delete", loan_path(loan.id), method: :delete, class: "btn btn-link text-decoration-none text-reset button-design" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
